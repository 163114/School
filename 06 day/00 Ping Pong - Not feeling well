#include <stdio.h>

int field_height = 80;
int field_lenght = 25;

void repeat (char input , int count );

int main() {

    char border = '|';
    char tl_border = '_';
    // int left_score = 0;
    // int right_score = 0;
    // char left_move_up = 'a';
    // char left_move_down = 'z';
    // char right_move_up = 'k';
    // char right_move_down = 'm';

    printf("\t\t\t\t %c Ping Pong %c \n", border, border);
    printf("Controls for the game are: a/z - left player, k/m - right player \n");
    printf("Please make a move to start a game \n");

    for (int i = 0; i <= 80; i ++) {
        if (i == 1) {
            repeat(printf("%c", tl_border), 80);
        }
        if (i < 1 || i < 79) {
            printf("%c", border);
        }
    }

    return 0;
}

